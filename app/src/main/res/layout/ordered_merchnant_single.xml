<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/feeds"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/rl_availabledetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/ll_availablename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:id="@+id/tv_myorder_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brinjal"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="20dp"
                        android:layout_margin="3dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="("
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/tv_myorder_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textSize="20dp"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="2dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kilos Bag)"
                            android:layout_margin="5dp"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="20dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="In $"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_availablename"
                        android:fontFamily="sans-serif-condensed"
                        android:text="400.00"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_alldetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_availabledetails"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buyer Name:"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="20dp"
                            />

                        <TextView
                            android:id="@+id/tv_orderName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="XXX"
                            android:textSize="20dp"
                            android:layout_weight="1"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_orderdtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ordered:"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/tv_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXX"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="20dp"
                            android:layout_marginTop="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" in kilos"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="20dp"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <!--<ImageView
                android:id="@+id/iv_availimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/brinjal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />-->

                <com.example.hp.echoapp.RoundedImageView
                    android:id="@+id/iv_availimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/brinjal"
                    />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rrr_del"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_availabledetails">

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

