<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/individual"
        layout="@layout/headerinner"/>
    <ScrollView
        android:id="@+id/sv_indiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/individual"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <LinearLayout
               android:id="@+id/ll_details"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/tv_individualtitle"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Brinjal"
                       android:textSize="20dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginBottom="5dp"
                       android:textColor="#000"/>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:id="@+id/tv_individualcost"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="400$"
                           android:textSize="18dp"
                           android:layout_marginLeft="5dp"
                           android:textColor="#666"/>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <TextView
                               android:id="@+id/tv_individualdlvry"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Delivery to:SunShine Mall"
                               android:textSize="18dp"
                               android:textColor="#666"
                               android:layout_marginLeft="5dp"
                               android:layout_marginBottom="5dp"/>
                           <TextView
                               android:id="@+id/tv_individualdate"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="ETA:2017-11-15"
                               android:textSize="18dp"
                               android:textColor="#666"
                               android:layout_marginLeft="5dp"/>
                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
               <ImageView
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:src="@drawable/brinjal"
                   android:layout_marginLeft="5dp"/>
               
           </LinearLayout>
            <View
                android:id="@+id/v_individual"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/ll_details"
                android:layout_marginTop="4dp"/>
            <LinearLayout
                android:id="@+id/ll_individualdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/v_individual">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Products:"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ordered Products:"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="900"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance Products:"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:id="@+id/v_pro"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/ll_individualdetails"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/tv_individualorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_pro"
                android:text="Ordered By"
                android:textSize="20dp"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:id="@+id/ll_ordered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/tv_individualorder">
            <LinearLayout
                android:id="@+id/ll_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="By"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Qty"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
            </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
    <ListView
        android:id="@+id/lv_indivordered"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/sv_indiv">
    </ListView>
</RelativeLayout>
