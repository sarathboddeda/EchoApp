<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/catv_header"
        layout="@layout/headerinner"></include>

    <TextView
        android:id="@+id/tv_productviewtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category Products"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#1684bf"
        android:layout_below="@+id/catv_header"/>

    <GridView
        android:id="@+id/catgv_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="auto_fit"
        android:layout_below="@+id/tv_productviewtitle">
    </GridView>

</RelativeLayout>
