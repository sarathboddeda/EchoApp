<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/balance_header"
        layout="@layout/headerinner"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/balance_header">
        <TextView
            android:id="@+id/tv_balancepro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance Products"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textColor="#1674bf"
            android:textStyle="bold"/>
        <ListView
            android:id="@+id/lv_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_balancepro">
        </ListView>
    </RelativeLayout>

</RelativeLayout>
