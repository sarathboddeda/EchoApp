<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/typeproductheader"
        layout="@layout/headerinner">
    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/typeproductheader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_allproductsdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_buyerprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#294b93"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_buyerimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_pic"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/tv_buyertypename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pavan Kumar"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/tv_buyertypeemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="pavan@gmail.com"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/tv_buyertypephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9844757594"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"/>
                    <ImageView
                        android:id="@+id/iv_buyertypeeditprofile"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/edit"
                        android:layout_gravity="right"
                        android:layout_margin="10dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl_alltypeproducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_buyerprofile">
                    <LinearLayout
                        android:id="@+id/ll_allproducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All Products"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_margin="10dp"
                            android:paddingTop="40dp"
                            android:textColor="#000"
                            android:textSize="20dp"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_allalpros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="100dp"
                            android:layout_height="2dp"
                            android:background="#c0c0c0"/>

                        <ImageView
                            android:id="@+id/iv_myavailableimage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/brinjal"
                            android:layout_margin="10dp" />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:id="@+id/v_all"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@+id/rl_alltypeproducts"
                    android:layout_margin="10dp"
                    android:background="#c0c0c0">
                </View>
                <RelativeLayout
                    android:id="@+id/rl_merchanttypeproducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_all"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <LinearLayout
                        android:id="@+id/ll_merchantpros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Merchant Products"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:paddingTop="40dp"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_merallpros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="100dp"
                            android:layout_height="2dp"
                            android:background="#c0c0c0"/>
                        <ImageView
                            android:id="@+id/mycartimage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/brinjal"
                            android:layout_margin="10dp" />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:id="@+id/v_merchant"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@+id/rl_merchanttypeproducts"
                    android:layout_margin="10dp"
                    android:background="#c0c0c0">
                </View>
                <RelativeLayout
                    android:id="@+id/rl_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_merchant"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <LinearLayout
                        android:id="@+id/ll_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category Products"
                            android:fontFamily="sans-serif-condensed"
                            android:paddingTop="40dp"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_catprosall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textSize="20dp"
                            android:fontFamily="sans-serif-condensed"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="100dp"
                            android:layout_height="2dp"
                            android:background="#c0c0c0"/>
                        <ImageView
                            android:id="@+id/balanceimage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/brinjal"
                            android:layout_margin="10dp" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
