<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/merchantsignupheader"
        layout="@layout/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/merchantsignupheader"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_merchantfields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
            <TextView
                android:id="@+id/tv_merchantsignuptitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create an Account"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20dp"
                android:textColor="#1684bf"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/et_merchantcmpnyname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/editfield"
                    android:layout_below="@+id/et_merchantpassport"
                    android:hint="Company Name"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_margin="5dp"
                    android:lines="1"
                    android:paddingLeft="10dp"/>
                <EditText
                    android:id="@+id/et_merchantcmpnyregis"
                    android:layout_width="match_parent"
                    android:lines="1"
                    android:layout_height="45dp"
                    android:background="@drawable/editfield"
                    android:layout_below="@+id/et_merchantrepassword"
                    android:hint="Company Registration"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/et_merchantpersonaladdress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:lines="1"
                android:background="@drawable/editfield"
                android:fontFamily="sans-serif-condensed"
                android:layout_below="@+id/tv_merchantsignuptitle"
                android:hint="Personal Address"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/et_merchantpersonalcnmt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="sans-serif-condensed"
                android:lines="1"
                android:maxLength="10"
                android:inputType="number"
                android:background="@drawable/editfield"
                android:layout_below="@+id/et_merchantpersonaladdress"
                android:hint="Personal Contact"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/et_merchantpassport"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/editfield"
                android:layout_below="@+id/et_merchantpersonalcnmt"
                android:lines="1"
                android:fontFamily="sans-serif-condensed"
                android:hint="NRIC#/Passport"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"/>

            <EditText
                android:id="@+id/et_merchantemail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/editfield"
                android:lines="1"
                android:layout_below="@+id/et_merchantcmpnyname"
                android:fontFamily="sans-serif-condensed"
                android:hint="Merchant Email"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/et_merchantpassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:lines="1"
                android:background="@drawable/editfield"
                android:layout_below="@+id/et_merchantemail"
                android:fontFamily="sans-serif-condensed"
                android:inputType="textPassword"
                android:hint="Password"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/et_merchantrepassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/editfield"
                android:layout_below="@+id/et_merchantemail"
                android:fontFamily="sans-serif-condensed"
                android:hint="Retype Password"
                android:inputType="textPassword"

                android:lines="1"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/et_merchantyearestablished"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/editfield"
                android:layout_below="@+id/et_merchantcmpnyregis"
                android:fontFamily="sans-serif-condensed"
                android:hint="Year Established"
                android:layout_margin="5dp"
                android:inputType="number"
                android:lines="1"
                android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/et_merchantproductcertification"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/editfield"
                android:hint="Product Certificate"
                android:lines="1"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="10dp"
                android:layout_below="@+id/et_merchantyearestablished"
                android:layout_alignLeft="@+id/et_merchantyearestablished"
                android:layout_alignStart="@+id/et_merchantyearestablished" />
               <!-- <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Profile Pic"
                    android:layout_below="@+id/et_useraddressstate"
                    style="@style/editTextEntryName"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/heading"
                        android:padding="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Upload Image"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/iv_proimage"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"/>
                </LinearLayout>-->
            </LinearLayout>
            <!--<EditText
                android:id="@+id/et_merchantaddress"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/editfield"
                android:layout_below="@+id/et_merchantproductcertification"
                android:hint="Address"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/et_merchantphone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/editfield"
                android:layout_below="@+id/et_merchantaddress"
                android:hint="Contact"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"/>-->



            <Button
                android:id="@+id/bt_merchantsignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_merchantfields"
                android:text="Create an Account"
                android:background="@drawable/signup_merchantbg"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-condensed"
                android:layout_margin="5dp"
                android:textSize="20dp"
                />
            <LinearLayout
                android:id="@+id/ll_alredy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_merchantsignup"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp">

                <TextView
                    android:id="@+id/tv_haveaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_below="@+id/bt_signup"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/tv_merchntlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loginunderline"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/bt_signup"
                    android:textColor="#1684bf"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/tv_here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="here"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/bt_signup"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
