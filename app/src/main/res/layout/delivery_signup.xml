<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/deliverysignup"
        layout="@layout/header"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/deliverysignup"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Signup"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="#1684BF"
                android:textStyle="bold"
                android:textAllCaps="true"/>
            <EditText
                android:id="@+id/et_fullname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                style="@style/editTextEntryName"
                android:fontFamily="sans-serif-condensed"
                android:layout_below="@+id/tv_logintitle"
                android:background="@drawable/editfield"
                android:hint="Full Name"
                android:paddingLeft="15dp"
                android:layout_margin="5dp"
                />

            <EditText
                android:id="@+id/et_delemailname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                style="@style/editTextEntryName"
                android:layout_below="@+id/et_fullname"
                android:layout_margin="5dp"
                android:background="@drawable/editfield"
                android:fontFamily="sans-serif-condensed"
                android:hint="Email id"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/et_delpassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                style="@style/editTextEntryName"
                android:fontFamily="sans-serif-condensed"
                android:layout_below="@+id/et_delemailname"
                android:background="@drawable/editfield"
                android:inputType="textPassword"
                android:hint="Password"
                android:paddingLeft="15dp"
                android:layout_margin="5dp"
                />
            <EditText
                android:id="@+id/et_delcnfrmpassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                style="@style/editTextEntryName"
                android:fontFamily="sans-serif-condensed"
                android:layout_below="@+id/et_delpassword"
                android:inputType="textPassword"
                android:background="@drawable/editfield"
                android:hint="Confirm Password"
                android:paddingLeft="15dp"
                android:layout_margin="5dp"
                />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                style="@style/editTextEntryName"
                android:fontFamily="sans-serif-condensed"
                android:layout_below="@+id/et_delemailname"
                android:background="@drawable/editfield"
                android:hint="Address"
                android:paddingLeft="15dp"
                android:layout_margin="5dp"
                />
            <EditText
                android:id="@+id/et_town"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                style="@style/editTextEntryName"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/editfield"
                android:hint="Town/City"
                android:paddingLeft="15dp"
                android:layout_margin="5dp"
                />
            <EditText
                android:id="@+id/et_state"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-condensed"
                style="@style/editTextEntryName"
                android:layout_height="45dp"
                android:background="@drawable/editfield"
                android:hint="State"
                android:paddingLeft="15dp"
                android:layout_margin="5dp"
                />

            <EditText
                android:id="@+id/et_zipcode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                style="@style/editTextEntryName"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/editfield"
                android:hint="Zip Code"
                android:inputType="number"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/editfield"
                android:hint="Mobile"
                android:inputType="number"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="15dp"
                android:layout_margin="5dp" />
            <EditText
                android:id="@+id/et_country"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/tv_logintitle"
                style="@style/editTextEntryName"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/editfield"
                android:hint="Country"
                android:layout_margin="5dp" />

           <!-- <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Profile Pic"
                android:layout_below="@+id/et_useraddressstate"
                style="@style/editTextEntryName"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#000"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/heading"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Upload Image"
                    android:textColor="#fff"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/iv_proimage"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>-->

            <Button
                android:id="@+id/bt_deliver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:layout_below="@+id/cb_remember"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="45dp"
                android:textAllCaps="false"
                android:background="@drawable/signup_merchantbg"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
