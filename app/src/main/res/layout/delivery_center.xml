<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include android:id="@+id/deliver_header"
        layout="@layout/headerinner"/>
    <LinearLayout
        android:id="@+id/ll_delcenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/details_header">
        <TextView
            android:id="@+id/tv_deliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Center"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#168bf4"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <ListView
            android:id="@+id/del_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:listSelector="#00000000"/>

       <Button
            android:id="@+id/bt_deliveredto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deliver to"
            android:textAllCaps="false"
            android:background="@drawable/signup_merchantbg"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#fff"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</LinearLayout>
