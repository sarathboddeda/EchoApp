<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/mycart_header"
        layout="@layout/headerinner"/>

        <TextView
            android:id="@+id/tv_mycarttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Cart"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/mycart_header"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textColor="#1674bf"
            android:textSize="20dp"
            android:textStyle="bold" />


    <ListView
        android:id="@+id/lv_mycart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mycarttitle">
    </ListView>

</RelativeLayout>
