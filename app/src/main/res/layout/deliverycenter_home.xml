<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/deliveryprofileheader"
        layout="@layout/headerinner">
    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/deliveryprofileheader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_deliverytypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_deliveryprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#294b93"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_delivery_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_pic"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/tv_deliv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pavan Kumar"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/tv_deliv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="pavan@gmail.com"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/tv_deliv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9844757594"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"/>
                    <ImageView
                        android:id="@+id/iv_deliv_editprofile"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/edit"
                        android:layout_gravity="right"
                        android:layout_margin="10dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl_deli_merchant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_deliveryprofile">
                    <LinearLayout
                        android:id="@+id/ll_del_mer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Merchant Orders"
                            android:fontFamily="sans-serif-condensed"
                            android:layout_margin="10dp"
                            android:paddingTop="30dp"
                            android:textColor="#000"
                            android:textSize="20dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_all_del_merch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="100dp"
                            android:layout_height="2dp"
                            android:background="#c0c0c0"/>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/brinjal"
                            android:layout_margin="10dp" />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:id="@+id/v_deli_merchant"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@+id/rl_deli_merchant"
                    android:layout_margin="10dp"
                    android:background="#c0c0c0"
                    >
                </View>
                <RelativeLayout
                    android:id="@+id/rl_ordred"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_deli_merchant"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <LinearLayout
                        android:id="@+id/ll_del_buyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buyers Orders"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:paddingTop="30dp"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_order_buyerview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                        <View
                            android:layout_width="100dp"
                            android:layout_height="2dp"
                            android:background="#c0c0c0"/>
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/brinjal"
                            android:layout_margin="10dp" />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:id="@+id/v_ordered"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@+id/rl_ordred"
                    android:layout_margin="10dp"
                    android:background="#c0c0c0">
                </View>
