<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/addpro_header"
        layout="@layout/headerinner"/>
    <TextView
        android:id="@+id/tv_editprotitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Product"
        android:textSize="20dp"
        android:textColor="@color/heading"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/addpro_header"
        android:gravity="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_margin="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_editprotitle">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_addprotitle"
            android:layout_marginTop="11dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_editproname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_signuptitle"
                    style="@style/editTextEntryName"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_margin="5dp"
                    android:lines="1"
                    android:background="@drawable/editfield"
                    android:hint="Product Name"
                    android:paddingLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Image"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt_editupload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@color/heading"
                        android:padding="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Upload Image"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/iv_editproimage"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"/>



                </LinearLayout>

                <EditText
                    android:id="@+id/et_editproprice"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_signuptitle"
                    android:layout_margin="5dp"
                    android:lines="1"
                    android:inputType="number"
                    style="@style/editTextEntryName"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@drawable/editfield"
                    android:hint="Price"
                    android:paddingLeft="10dp" />

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/editfield"
                    android:padding="10dp">

                    <com.example.hp.echoapp.NoDefaultSpinner
                        android:id="@+id/sp_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#000"
                        android:entries="@array/category"
                        android:prompt="@string/category" />
                </LinearLayout>-->
                <EditText
                    android:id="@+id/et_editproquanitity"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_signuptitle"
                    style="@style/editTextEntryName"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_margin="5dp"
                    android:inputType="number"
                    android:lines="1"
                    android:background="@drawable/editfield"
                    android:hint="Quantity"
                    android:paddingLeft="10dp" />
                <EditText
                    android:id="@+id/et_editdescpro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:singleLine="false"
                    android:background="@drawable/editfield"
                    android:fontFamily="sans-serif-condensed"
                    android:lines="5"
                    android:hint="Description"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip" />
                <Button
                    android:id="@+id/bt_editaddproduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Product"
                    android:layout_below="@+id/cb_remember"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="false"
                    android:background="@drawable/signup_merchantbg"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    />


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
